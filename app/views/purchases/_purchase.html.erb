<tr>
  <td class="text-right"><%= purchase_counter + 1 %></td>
  <td><%= purchase.user.name %></td>
  <td class="text-center"><%= l purchase.date %></td>
  <td class="text-right"><%= number_to_currency purchase.amount %></td>
  <td><%= purchase.note %></td>
  <td class="text-center">
    <%= link_to edit_purchase_path(purchase),
      class: "btn btn-info btn-xs" do %>
      <i class="fa fa-pencil"></i> Sửa
    <% end %>
    <%= link_to purchase_path(purchase), class: "btn btn-danger btn-xs",
      data: {confirm: "Xác nhận xóa?"}, method: :delete do %>
      <i class="fa fa-trash"></i> Xóa
    <% end %>
  </td>
</tr>