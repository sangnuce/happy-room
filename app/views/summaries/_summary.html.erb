<tr>
  <td class="text-right"><%= summary_counter + 1 %></td>
  <td class="text-center"><%= l summary.created_at %></td>
  <td>
    <% summary.summary_details.each do |detail| %>
      <%= "#{detail.user.name}: <b>#{number_to_currency detail.amount}</b>".html_safe %>
      <hr>
    <% end %>
  </td>
  <td><%= t "summary.statuses.#{summary.status}" %></td>
  <td class="text-center">
    <% if summary.not_completed? %>
      <%= link_to summary_path(summary), class: "btn btn-info btn-xs",
        data: {confirm: "Xác nhận cập nhật?"}, method: :patch do %>
        <i class="fa fa-check-square-o"></i> Đã hoàn tất
      <% end %>
      <%= link_to summary_path(summary), class: "btn btn-danger btn-xs",
        data: {confirm: "Xác nhận xóa?"}, method: :delete do %>
        <i class="fa fa-trash"></i> Xóa
      <% end %>
    <% end %>
  </td>
</tr>
